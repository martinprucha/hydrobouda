<?xml version="1.0" encoding="UTF-8"?>

<!-- log4j2 configuration for Hydrobouda project -->
<Configuration status="WARN" strict="true" name="hydrobouda">
	<!-- properties -->
	<Properties>
		<Property name="filename">target/logs/hydrobouda.log</Property>
		<Property name="filePattern">target/logs/hydrobouda.%d{dd-MM-yyyy_HH}.log.gz</Property>
		<Property name="pattern">%d{dd-MM-yyyy HH:mm:ss,SSS} [%p] %C{1.} [%t] %m%n</Property>
	</Properties>

	<!-- appenders -->
	<Appenders>
		<!-- console appender -->
		<Console name="STDOUT" target="SYSTEM_OUT" ignoreExceptions="false">
			<Layout type="PatternLayout" pattern="${pattern}" />
		</Console>
		
		<!-- rolling file appender -->
		<RollingFile name="RollingFile"
  			fileName="${filename}"
  			filePattern="${filePattern}"
  			ignoreExceptions="false">
    		<TimeBasedTriggeringPolicy />
    		<Layout type="PatternLayout" pattern="${pattern}" />
		</RollingFile>
	</Appenders>

	<!-- loggers -->
	<Loggers>
		<!-- root logger -->
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="RollingFile" />
		</Root>
	</Loggers>

</Configuration>